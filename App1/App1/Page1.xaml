<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page1">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Picker x:Name="pickMusic"
                    Title="Seleccionar una opcion"
                    TextColor="Red"
                    SelectedIndexChanged="pickMusic1">
                <Picker.Items>
                <x:String>Pop</x:String>
                <x:String>Rock</x:String>
                <x:String>Instrumental</x:String>
                <x:String>Clasica</x:String>
                <x:String>Opera</x:String>
                </Picker.Items>
            </Picker>
            <ProgressBar
                x:Name="progressNum"
                Progress="1">
            </ProgressBar>
            <Button
                x:Name="btnSimular"
                Text="Simular"
                BackgroundColor="Black"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="Large"
                Clicked="btnSimular_Clicked">
            </Button>
            <SearchBar x:Name="searchBar"
                       HeightRequest="50"
                       Placeholder="Buscar"
                       CancelButtonColor="Blue"
                       SearchButtonPressed="Handle_SearchButtonPressed"
                       TextColor="Red"
                       TextChanged="Handle_TextChanged">
            </SearchBar>
            <Slider
                x:Name="slider"
                Maximum="200"
                Minimum="100"
                Value="120"
                ValueChanged="Handle_ValueChanged">
            </Slider>
            <Label
                x:Name="labCambio"
                TextColor="Blue"
                FontSize="Large"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"></Label>

            <Stepper
                x:Name="steeper"
                Minimum="50"
                Maximum="150"
                Increment="25"
                ValueChanged="stepEvent">
            </Stepper>
            <Label
                x:Name="lbDisplay">
            </Label>
      
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>